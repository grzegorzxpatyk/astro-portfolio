---
import Layout from '../layouts/Layout.astro';
import Prose from '../components/Prose.astro';
import { getEntry } from 'astro:content';
import { Image } from 'astro:assets';
import localAvatarImg from '../content/bio/avatar.jpg';

const entry = await getEntry('bio', 'short-description');
const { Content: Bio } = await entry.render();
---

<Layout>
    <section class='h-full w-full flex justify-center items-center'>
        <h1
            class='select-none bg-clip-text text-transparent bg-gradient-landing text-[max(7dvh,_13dvw)] font-black leading-[0.8] uppercase text-balance tracking-wide'
        >
            <span class='whitespace-nowrap'>Greg Patyk</span> Frontend Developer
            Portfolio
        </h1>
    </section>
    <section class='m-0 py-8 2xl:py-12 h-full w-full flex flex-col'>
        <div
            class='border min-w-fit border-zinc-500 rounded-3xl p-8 md:p-12 lg:p-12 xl:p-14 2xl:p-24 grid grid-rows-3 grid-cols-1 md:grid-rows-1 md:grid-cols-3 gap-8 xl:gap-12 justify-between items-center min-h-full h-fit lg:h-full'
        >
            <Prose>
                <Bio />
            </Prose>
            <Image
                src={localAvatarImg}
                class='rounded-3xl filter contrast-50 shadow-[0_0_50px] shadow-zinc-50/10 h-full max-w-full object-cover'
                alt='Portrait of brunette man, smiling. Red planks in the background.'
            />
        </div>
    </section>
</Layout>
