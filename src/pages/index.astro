---
import Button from '../components/Button';
import Layout from '../layouts/Layout.astro';
import Prose from '../components/Prose.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('bio', 'short-description');
const { Content: Bio } = await entry.render();
---

<Layout title='Greg Patyk - Portfolio'>
    <h1 class='text-6xl mb-8 text-zinc-950 dark:text-zinc-50 font-bold'>
        Hello there!
    </h1>
    <Prose>
        <Bio />
    </Prose>
    <Button className='mt-12' client:load>Press me!</Button>
</Layout>
