---
type Props = {
    name: string;
    description: string;
    repoURL: string;
    liveURL?: string;
};

const {
    name = 'Project name',
    description = 'Lorem ipsum dolor sit amet.',
    repoURL,
    liveURL,
} = Astro.props;
---

<article
    class='w-4/5 min-w-[200px] sm:min-w-[300px] md:min-w-[400px] xl:min-w-600px h-full rounded-2xl p-6 border border-zinc-500 snap-start flex flex-col justify-between'
>
    <div class='flex flex-col gap-2'>
        <h3 class='text-4xl break-words'>
            <a href={repoURL} target='_blank'>{name}</a>
        </h3>
        {
            liveURL && (
                <h4 class='text-zinc-600 break-words'>
                    <a href={liveURL} target='_blank'>
                        {liveURL.slice(8)}
                    </a>
                </h4>
            )
        }
    </div>
    <p class='text-zinc-800 dark:text-zinc-300'>
        {description}
    </p>
</article>
